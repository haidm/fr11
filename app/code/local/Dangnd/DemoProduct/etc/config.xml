<?xml version="1.0"?>

<config>
    <modules>
        <Dangnd_DemoProduct>
            <version>0.1</version>
        </Dangnd_DemoProduct>
    </modules>
    <frontend>
        <routers>
            <DemoProduct>
                <use>standard</use>
                <args>
                    <module>Dangnd_DemoProduct</module>
                    <frontName>prd</frontName>
                </args>
            </DemoProduct>
        </routers>
    </frontend>
    <global>
        <resources>
            <demoproduct_setup>
                <setup>
                    <module>Dangnd_DemoProduct</module>
                </setup>
            </demoproduct_setup>
        </resources>
        <models>
            <demoproduct>
                <class>Dangnd_DemoProduct_Model</class>
            </demoproduct>
        </models>
        <events>
            <catalog_product_collection_load_after>
                <observers>
                    <changelistprice>
                        <class>demoproduct/observer</class>
                        <method>changeListPrice</method>
                    </changelistprice>
                </observers>
            </catalog_product_collection_load_after>
            <catalog_controller_product_view>
                <observers>
                    <changeviewprice>
                        <class>demoproduct/observer</class>
                        <method>changeViewPrice</method>
                    </changeviewprice>
                </observers>
            </catalog_controller_product_view>
            <checkout_cart_product_add_after>
                <observers>
                    <changecartprice>
                        <class>demoproduct/observer</class>
                        <method>changeCartPrice</method>
                    </changecartprice>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </global>
</config>
